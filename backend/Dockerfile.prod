# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

# Production stage
FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci --omit=dev

COPY --from=builder /app/dist ./dist

# Create logs directory with proper permissions before switching to non-root user
RUN mkdir -p /app/logs && chown node:node /app/logs

# Run as non-root user for security
USER node

ENV NODE_ENV=production
ENV PORT=3000

EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/api/v1/health/liveness || exit 1

# SECURITY: Do NOT run seed in production
# Seed script creates demo users with known credentials
# If database seeding is needed, run it manually in a secure environment:
#   docker exec <container> node dist/seeds/seed.js
CMD ["node", "dist/main.js"]
